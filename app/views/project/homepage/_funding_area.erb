<div id="funding_area">
  <div class="container clearfix">

    <% if @settings.tagline != '' %>
      <div class="center">
        <h2><%= @settings.tagline %></h2>
      </div>
    <% end %>
    
    <div id="video">
      <% if @settings.video_placeholder.file? %>
        <div id="video_image">
          <%= image_tag @settings.video_placeholder.url(:main), alt: "video_place_holder" %>
        </div>
        <div id="player" class="hidden" style="display: none;">
          <object width="512" height="385">
            <param name="movie" value="<%= @settings.video_embed_url %>?autohide=1&showinfo=0&rel=0&autoplay=1" />
            <param name="allowFullScreen" value="true" />
            <param name="allowscriptaccess" value="always" />
            <embed src="<%= @settings.video_embed_url %>?autohide=1&showinfo=0&rel=0&autoplay=1" type="application/x-shockwave-flash" width="512" height="385" allowscriptaccess="always" allowfullscreen="true"></embed>
          </object>
        </div>
      <% else %>
        <iframe width='512' height='385' src="<%= video_url %>"></iframe>
      <% end %>
    </div>
  
    <div id="backing">
      <ul>
        <li class="stats" id="backers">
          <%= number_with_delimiter @campaign.stats["number_of_contributions"].to_i, :delimiter => "," %>
          <span><%= @settings.contributor_reference.pluralize(@campaign.stats["number_of_contributions"].to_i) %></span>
        </li>
        <li class="stats">
          <%= number_to_currency @campaign.stats["raised_amount"].to_f/100, :precision => 0 %>
          <span>of <%= number_to_currency @settings.project_goal.to_f, :precision => 0 %></span>
        </li>
  
        <% if @settings.expiration_date.present? %>
          <li class="stats" id="days">
            <%= distance_of_time_in_words_to_now(@settings.expiration_date).gsub(/\D/, "") %>
            <span><%= distance_of_time_in_words_to_now(@settings.expiration_date).gsub(/\d/, "").gsub("about", "") %> left</span>
          </li>
        <% else %>
          <li class="stats" id="days">
              &infin;
              <span>days left</span>
            </li>
        <% end %>
      </ul>
      <% if @campaign.stats["raised_amount"].to_f/100 < @settings.project_goal.to_f %>
        <div id='progress_bg' class='small'>
          <div id='progress' class='' style='width: <%= @campaign.stats["tilt_percent"].to_i %>%;'>
          </div>
        </div>
      <% else %>
        <div id="progress_bg">
          <div id="progress">
          </div>
          <div id='progress_text'><%= @campaign.stats["tilt_percent"].to_i %>% <%= @settings.progress_text %></div>
        </div>
      <% end %>
      
      <div id="reserve_container">
        <div class="call_to_action_button">
          <a href="<%= url_for checkout_path %>" class="blue_button reserve"><%= @settings.primary_call_to_action_button %></a>
        </div>
        <div class="call_to_action_description">
          <%= raw(@settings.primary_call_to_action_description) %>
        </div>
        <%= like_button %>
      </div>
    
  </div>
  
  </div>
</div>