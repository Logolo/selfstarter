<div id="user">
  <div class="container clearfix">
    <h3>Account: <%= current_user.fullname %></h3>
    <ul class="nav nav-pills">
      <li class="active">
        <%= link_to "Payments", user_payments_path, class: 'show-loader' %>
      </li>
      <li>
        <%= link_to "Settings", user_settings_path, class: 'show-loader' %>
      </li>
    </ul>    

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount</th>
          <th>Credit Card</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @payments.each do |payment| %>
        <tr>
          <td><%= DateTime.parse(payment.creation_date).strftime("%m/%d/%Y") %></td>
          <td>$<%= number_with_precision(payment.amount.to_f/100.0 + payment.user_fee_amount.to_f/100.0, precision: 2) %></td>
          <td>
          <%= payment.card.card_type %> 
          ************<%= payment.card.last_four %> 
          (<%= payment.card.expiration_month.to_s + '/' + payment.card.expiration_year.to_s %>)
          </td>
          <td><%= payment.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
